<Window x:Class="LompakkoOhjelma.Valinta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Valinta" Height="300" Width="300">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height = "Auto"/>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnKirjaudu" Content="Kirjautuminen" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="124" BorderThickness="1" Height="36" Click="btnKirjaudu_Click" FontFamily="Segoe WP Black" />
        <Button x:Name="btnLuoUusi" Content="Uusi Käyttäjä" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="124" Height="36" Click="btnLuoUusi_Click" FontFamily="Segoe WP Black" />
        <Label Content="LompakkoOhjelma 6000" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Segoe WP Black" FontSize="16"/>
    </Grid>
</Window>
